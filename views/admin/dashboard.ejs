<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Meta Tags -->
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" />

  <!-- Local CSS -->
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/admin.css" />

  <!-- Bar Title -->
  <title>The Dashboard</title>
</head>

<body>
  <%- include("../partials/navbar") %>
  <div class="container">
    <div class="user-list-table">
      <div class="d-flex justify-content-between mb-3">
        <h1>User List</h1>
        <a href="/users/register">
          <button class="btn btn-success">
            <i class="bi bi-plus-circle" style="margin-right: 0.4em"></i>Add
          </button>
        </a>
      </div>
      <table id="table-user">
        <thead>
          <tr>
            <th scope="col">USER_ID</th>
            <th scope="col">USERNAME</th>
            <th scope="col">IS ADMIN?</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((user) => { %>
          <tr>
            <td><%= user.user_id %></td>
            <td><%= user.username %></td>
            <td><% if(user.is_admin) {%> YES <% } else {%> <% } %></td>
            <td class="d-flex justify-content-around text-center">
              <a href="/admin/detail/<%= user.user_id %> ">
                <button type="button" class="btn btn-info">Details</button>
              </a>
              <a href="/admin/edit/<%= user.user_id %>">
                <button type="button" class="btn btn-warning">Edit</button>
              </a>
              <a href="/admin/delete/<%= user.user_id %>">
                <button type="button" class="btn btn-danger">Delete</button>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="/js/fallback.js"></script>
</body>

</html>