<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Tags -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />

    <!-- Local CSS -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/admin.css" />

    <!-- Bar Title -->
    <title>The Dashboard</title>
  </head>
  <body>
    <%- include("../partials/navbar") %>
    <div class="container">
      <div class="user-list-table">
        <div class="d-flex justify-content-between mb-3">
          <h1>User Details</h1>
          <a href="/admin">
            <button class="btn btn-secondary">
              <i class="bi bi-caret-left-fill" style="margin-right: 0.4em"></i>
              Back to Dashboard
            </button>
          </a>
        </div>
        <div class="pt-5">
          <div class="row mb-4">
            <div class="col-3">
              <h3>User ID</h3>
            </div>
            <div class="col-6"><%= data.user_id %></div>
          </div>
          <div class="row mb-4">
            <div class="col-3">
              <h3>Username</h3>
            </div>
            <div class="col-6"><%= data.username %></div>
          </div>
          <div class="row mb-4">
            <div class="col-3">
              <h3>Password</h3>
            </div>
            <div class="col-6">
              <div class="col-6"><%= data.password %></div>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col-3">
              <h3>Role</h3>
            </div>
            <div class="col-6">
              <div class="col-6">
                <% if(data.is_admin) {%> ADMIN <% } else {%> USER <% } %>
              </div>
            </div>
          </div>
          <h2 class="mb-4">User Bio</h2>
          <div class="row mb-4">
            <div class="col-3">
              <h3>Name</h3>
            </div>
            <div class="col-6">
              <div class="col-6"><%= data.biodata.name %></div>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col-3">
              <h3>Bio</h3>
            </div>
            <div class="col-6">
              <div class="col-6"><%= data.biodata.bio %></div>
            </div>
          </div>
          <h2 class="mb-4">User History</h2>
          <div class="row">
            <div class="col-9">
              <table id="user-history-table">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Log Time</th>
                    <th scope="col">Result</th>
                    <th scope="col">Score</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.histories.forEach((history)=>{ %>
                  <tr>
                    <td><%= history.id %></td>
                    <td><%= history.playedAt %></td>
                    <td><%= history.result %></td>
                    <td><%= history.score %></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="row">
            <div class="col mt-4 text-end">
              <a href="/admin/edit/<%= data.user_id %> ">
                <button class="btn btn-lg btn-warning mt-4">Edit</button>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="/js/fallback.js"></script>
  </body>
</html>
